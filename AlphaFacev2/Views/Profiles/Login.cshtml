@model AlphaFacev2.Models.Profile

@{
    ViewData["Title"] = "Login";
}

<div class="w3-content w3-container w3-black w3-padding-64">
    <h3 class="w3-center" style="font-size:25px;">LOGIN</h3>

    <div class="w3-panel" style="margin:0px 0px 20px 0px; padding: 0px 0px 0px 0px;">
        <div class="w3-panel" style="width:100%; padding:0px 0px 0px 0px; margin:20px 0px 0px 0px;">
            <button class="w3-button w3-block w3-blue-grey"> <a asp-controller="Profiles" asp-action="LoginAFace">Login in with <b>AFace authentication</b></a></button>
        </div>
    </div>

    <div class="w3-container">
        <form asp-controller="Profiles" asp-action="LoginAsync" method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="w3-center text-danger"></div>
            <div class="w3-row">
                <div class="w3-third w3-container">
                </div>
                <div class="w3-third w3-container ">
                    <input class="w3-input w3-border-0 w3-dark-grey" style="width: 280px; height: 40px" type="text" placeholder="Email" required name="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="w3-left text-danger"></span>
                </div>
                <div class="w3-third w3-container">
                </div>
            </div>
            <div class="w3-row">
                <div class="w3-third w3-container">
                </div>
                <div class="w3-third w3-container w3-padding-16">
                    <input class="w3-input w3-border-0 w3-dark-grey" style="width: 280px; height: 40px" type="password" placeholder="Password" required name="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="w3-left text-danger"></span>
                </div>
                <div class="w3-third w3-container">
                </div>
            </div>

            <div class="w3-center">
                <input type="submit" value="Login" class="w3-button w3-hover-text-dark-grey w3-blue-grey w3-center" />
            </div>
        </form>
    </div>
    <br />
    <div style="text-align:center;">
        <p></p>
        <br />
        <p style="font-size:17px; margin:0px 0px">Don't have an account yet?</p>
        <p class="w3-center w3-button w3-dark-gray w3-border-0 w3-section"><a asp-controller="Profiles" asp-action="Register">Register Here</a></p>
    </div>
</div>
<p></p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
