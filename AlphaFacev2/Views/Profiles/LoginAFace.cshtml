@model AlphaFacev2.Models.Profile

@{
    ViewData["Title"] = "Login";
}

<h4>Login using AFace</h4>
<hr />

<div class="row">
    <div class="column" style="min-width:340px; border:1px solid white">
        <form method="post" asp-controller="Profiles" asp-action="LoginAFace" style="text-align:left">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div style="height:280px">
                <h6>Picture to use for AFace login</h6>
                <div class="col-md-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="results"></div>
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-warning" value="Login using AFace" style="width:260px; height:40px; font-size:larger;">
        </form>
    </div>

    <div class="column" style="width:60px"></div>

    <div class="column" style="min-width:400px; border:1px solid white">
        <div class="col-md-10" style="text-align:center; height: 360px">
            <section>
                <h6 style="text-align:center;">Take a picture using your webcam</h6>
                <div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="my_camera"></div>
                            <!-- A button for taking snaps -->
                            <div>
                                <br />
                                <form>
                                    <input type="button" class="btn btn-primary" value="Take Snapshot" onClick="take_snapshot()">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">    </div>
                <!-- First, include the Webcam.js JavaScript Library -->
                <script src="~/webcamjs/webcam.js"></script>
                <!-- Configure a few settings and attach camera -->
                <script language="JavaScript">
                    Webcam.set({
                        width: 320,
                        height: 240,
                        image_format: 'jpeg', // changed from jpeg
                        jpeg_quality: 100
                    });
                    Webcam.attach('#my_camera');
                </script>

                <!-- Code to handle taking the snapshot and displaying it locally -->
                <script language="JavaScript">
                    function take_snapshot() {
                        // take snapshot and get image data
                        Webcam.snap(function (data_uri) {
                            // display results in page
                            document.getElementById('results').innerHTML =
                                '<img src="' + data_uri + '"/>';

                            Webcam.upload(data_uri, '/Faces/Capture', function (code, text) {
                                                                                                                    /*alert('Photo Captured')*/;
                            });
                        });
                    }
                </script>
            </section>
        </div>
    </div>
</div>
<br />
<div>
    <a asp-controller="Profiles" asp-action="Login">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
