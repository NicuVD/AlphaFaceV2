@model IEnumerable<AlphaFacev2.Models.Face>
@inject AlphaFacev2.Services.AccountServices  accountServices

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr style="text-align:center">
            <th>Profile picture</th>
            <th>Comparison picture</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="col-md-10" style="text-align:center">
                @{
                    var user = accountServices.GetCurrentUser();
                    string imgSrc = "";

                    if (user.IsLoggedIn == true)
                    {
                        var base64 = Convert.ToBase64String(user.ProfileImage);
                        imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                    }
                }
                <img src="@imgSrc" alt="Profile Picture" height="240" />
            </td>
            <td class="col-md-10" style="text-align:center">
                @*Display captured image here*@
                <div class="col-md-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="results"></div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="col-md-10" style="text-align:center">
                <section >
                    <h6 style="text-align:center;font-size:small">Upload a picture from your computer</h6>
                    <hr />
                    <form method="post" enctype="multipart/form-data" asp-controller="Faces" asp-action="UploadImage">
                        <div class="form-group">
                            <div>
                                <input type="file" name="file" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Upload" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </section>
            </td>
            <td class="col-md-10" style="text-align:center">
                <section >
                    <h6 style="text-align:center;font-size:small">Take a picture using your webcam</h6>
                    <hr />
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div id="my_camera"></div>
                                <!-- A button for taking snaps -->
                                <div>
                                    <form>
                                        <input type="button" class="btn btn-primary" value="Take Snapshot" onClick="take_snapshot()">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">    </div>
                    <!-- First, include the Webcam.js JavaScript Library -->
                    <script src="~/webcamjs/webcam.js"></script>
                    <!-- Configure a few settings and attach camera -->
                    <script language="JavaScript">
                        Webcam.set({
                            width: 320,
                            height: 240,
                            image_format: 'jpeg',
                            jpeg_quality: 90
                        });
                        Webcam.attach('#my_camera');
                    </script>

                    <!-- Code to handle taking the snapshot and displaying it locally -->
                    <script language="JavaScript">
                        function take_snapshot() {
                            // take snapshot and get image data
                            Webcam.snap(function (data_uri) {
                                // display results in page
                                document.getElementById('results').innerHTML =
                                    '<img src="' +
                                    data_uri +
                                    '"/>';

                                Webcam.upload(data_uri,
                                    '/Camera/Capture',
                                    function (code, text) {
                                        alert('Photo Captured');
                                    });
                            });
                        }
                    </script>
                </section>
            </td>
        </tr>
        <tr>
            <td style="text-align:center" colspan="2">
                <form asp-controller="Faces" asp-action="CompareProfilePictures">
                    <input type="submit" class="btn btn-primary btn-warning" value="Compare pictures" style="width:300px; height:60px; font-size:larger;">
                </form>
            </td>
        </tr>
    </tbody>
</table>