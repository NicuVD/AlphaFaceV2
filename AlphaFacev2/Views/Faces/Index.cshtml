@model  IEnumerable<AlphaFacev2.Models.Image>
@using Microsoft.AspNetCore.Http

@inject AlphaFacev2.Services.AccountServices  accountServices

@{
    ViewData["Title"] = "Index";
}

    <div>
        <form method="post" asp-controller="Faces" asp-action="CompareToWebcamPicture" style="text-align:left">
            <input type="submit" class="btn btn-primary btn-warning" value="Compare pictures" style="width:260px; height:40px; font-size:larger;">
        </form>
        <hr />

        <div class="column" style="text-align:center; width:340px;">
            <div class="col-md-10" style="height: 280px">
                <h6>Profile picture</h6>
                <img src="@Model.First().ImageSource" style="height: 240px">
            </div>
        </div>

        <div class="column" style="text-align:center; width:340px;">
            <div class="col-md-10" style="height:280px">
                <h6>Picture to compare</h6>
                <div class="col-md-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="results"></div>
                            @*<img src="@Model.Last().ImageSource" style="height: 240px">*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="column" style="text-align:center; width:340px;">
            <div class="col-md-10" style="text-align:center; height: 360px">
                <section>
                    <h6 style="text-align:center;">Take a picture using your webcam</h6>
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div id="my_camera"></div>
                                <!-- A button for taking snaps -->
                                <div>
                                    <br />
                                    <form>
                                        <input type="button" class="btn btn-primary" value="Take Snapshot" onClick="take_snapshot()">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">    </div>
                    <!-- First, include the Webcam.js JavaScript Library -->
                    <script src="~/webcamjs/webcam.js"></script>
                    <!-- Configure a few settings and attach camera -->
                    <script language="JavaScript">
                        Webcam.set({
                            width: 320,
                            height: 240,
                            image_format: 'jpeg', // changed from jpeg
                            jpeg_quality: 100
                        });
                        Webcam.attach('#my_camera');
                    </script>

                    <!-- Code to handle taking the snapshot and displaying it locally -->
                    <script language="JavaScript">
                        function take_snapshot() {
                            // take snapshot and get image data
                            Webcam.snap(function (data_uri) {
                                // display results in page
                                document.getElementById('results').innerHTML =
                                    '<img src="' + data_uri + '"/>';

                                Webcam.upload(data_uri, '/Faces/Capture', function (code, text) {
                                                                    /*alert('Photo Captured')*/;
                                });
                            });
                        }
                    </script>
                </section>
            </div>
        </div>


    </div>