@{
    ViewData["Title"] = "Face";
}

<div class="row">
    <section style="border:solid;border-color:dodgerblue;border-radius:10px">
        <h5 style="text-align:center">Upload your piture for AFace</h5>
        <hr />
        <form method="post" enctype="multipart/form-data" asp-controller="Faces" asp-action="PostProfilePicture">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </section>
</div>
